{
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"module": "esnext",
		"target": "ES5",
		"jsx": "react",
		"experimentalDecorators": true,
		"types": ["react", "react-dom"],
		"baseUrl": "src",
		"lib": ["dom", "es5", "scripthost", "es6", "es2016.array.include"],
		"moduleResolution": "node"
	},
	"include": ["*.ts", "./src/**/*.ts", "./src/**/*.tsx", "./type-declarations/**/*.d.ts"],
	"exclude": ["node_modules", "./dist"]
}
